extends layout

block content 
  // Title
  h1= question.title
  h4 Asked by #{question.author}
  h5= question.votes
  p= question.content
  h2 Answers
  each answer in question.answers
    div
      h3= answer.title
      p= answer.content
      // b By #{answer.author}

  form(method='POST' action='/answer')
    div.form-group
      label(for='answer') Submit your answer: 
      input#answer(type='textarea', placeholder="Submit an Answer")
  button.btn.btn-primary(type='submit') AnswerIt!
  h5
    script.
      function clickCounter() {
      if (typeof(Storage) !== "undefined") {
      if (localStorage.clickcount) {
      localStorage.clickcount = Number(localStorage.clickcount)+1;
      } else {
      localStorage.clickcount = 1;
      }
      document.getElementById("result").innerHTML = "You have clicked the button " + localStorage.clickcount + " time(s).";
      } else {
      document.getElementById("result").innerHTML = "Sorry, your browser does not support web storage...";
      }
      }
  body
    p
      button(onclick='clickCounter()', type='button') Rate!
    p=question.votes
  

  
