extends layout

block content
  h1 Ask a new Question
  form(method='POST' action='/submit')
    div.form-group
      label(for='title') Title:
      input#title.form-control(type='text', placeholder='What is 1 + 1?' name='title')
    div.form-group
      label(for='content') Details:
      input#content.form-control(type='textarea', placeholder='What is, and how do I find the solution to 1 + 1?' name='content')
    div.form-group
      label(for='author') Author:
      input#author.form-control(type='text', placeholder='Jane Doe' name='author')
